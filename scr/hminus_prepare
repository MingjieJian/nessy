ABO=  4.16E-04
ABF=  3.31E-08
ANE=  6.30E-05
ANA=  1.35E-06
AMG=  3.09E-05
AAL=  2.13E-06
ASI=  2.95E-05
ABP=  2.09E-07
ABS=  6.30E-06
ACL=  2.88E-07
AAR=  1.38E-06
