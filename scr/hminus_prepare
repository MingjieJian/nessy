fi


if [[ "" != $LBKG ]]; then
cat >> CARDS << eof

LBKG  900 9990
OLDSTART
eof
fi;

cp ../$OLD/*.exe ./
#./hminus.exe | tee model.out
#rm hminus.exe
fi
